<div class="row">
  <form action="/movies/create" method="POST" enctype="multipart/form-data">  
    <div class="row">
    {{#if invalidName}}
      <div class="col-lg-12 form-group has-error has-feedback">
    {{else}}
      <div class="col-lg-12 form-group">
    {{/if}}
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{name}}">
        {{#if invalidName}}
          <span id="invalidName" class="help-block"><strong>Error!</strong> This field must not be empty!</span>
        {{/if}}
      </div>
    </div>
    <div class="row">
    {{#if invalidDescription}}
      <div class="col-lg-12 form-group has-error has-feedback">
    {{else}}
      <div class="col-lg-12 form-group">
    {{/if}}
        <label for="description">Description</label>
        <textarea type="text" rows="4" class="form-control" id="description" name="description" placeholder="Description" value="{{description}}"></textarea>
        {{#if invalidDescription}}
          <span id="invalidDescription" class="help-block"><strong>Error!</strong> This field must not be empty!</span>
        {{/if}}
      </div>
    </div>
    <div class="row">
    {{#if invalidKeywords}}
      <div class="col-lg-12 form-group has-error has-feedback">
    {{else}}
      <div class="col-lg-12 form-group">
    {{/if}}
        <label for="keywords">Keywords</label>
        <input type="text" class="form-control" data-role="tagsinput" id="keywords" name="keywords" placeholder="Keywords" value="{{keywords}}">
        {{#if invalidKeywords}}
          <span id="invalidKeywords" class="help-block"><strong>Error!</strong> This field must not be empty!</span>
        {{/if}}
      </div>
    </div>
    <div class="row">
    {{#if invalidImage}}
      <div class="col-lg-12 form-group has-error has-feedback">
    {{else}}
      <div class="col-lg-12 form-group">
    {{/if}}
        <label for="image">Upload Movie Poster Image</label>
          <!-- The file is stored here. -->
        <input type="file" class="form-control" id="image" name="image" value="{{image}}">
        {{#if invalidImage}}
          <span id="invalidImage" class="help-block"><strong>Error!</strong> You must upload an image!</span>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="container-fluid">        
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>