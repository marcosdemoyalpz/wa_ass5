<div class="col-md-12">
    <div style="margin-bottom: 15px" class="row">
        {{#each movies}}
            <a href="/movies/details/{{_id}}">
                <div class="col-md-4 centered form-group">
                    <div class="img-thumbnail">
                    {{#if movie_thumbnail_large}}
                        <img src="{{movie_thumbnail_large}}" class="img-responsive" width="300">
                    {{else}}
                        <img src="{{image}}" class="img-responsive" width="300">
                    {{/if}}                
                    <div class="caption" style="text-align: center;">
                        <h3 style="text-align: center;">{{name}}</h3>
                    </div>
                    </div>                    
                </div>                
            </a>
        {{/each}}
    </div>
</div>